                <li><a href="{$url}berita/index/olah-raga">Olah Raga</a></li>
                <li><a href="{$url}berita/index/edukasi">Edukasi</a></li>
                <li><a href="{$url}lipsus">Video Lipsus</a></li>
                <li><a href="{$url}poling">Klik Poling</a></li>
            </ul>
        </div>
    </div>
    <div class="header-marquee">
        <div class="container">
            <div class="header-marquee-label">Highlight</div>
            <marquee behavior='scroll' direction='left' onmouseover='this.stop();' onmouseout='this.start();' id='hilightList'></marquee>
        </div>
    </div>
